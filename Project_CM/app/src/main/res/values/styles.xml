<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>



    <style name="MyTextAppearanceMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <style name="NumbersColors" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/green_400</item>
        <item name="colorSecondary">@color/green_200</item>
    </style>

    <style name="NumberPicker" parent="NumbersColors">
        <item name="colorAccent">@color/green_400</item>
        <item name="colorControlNormal">@android:color/transparent</item>

        <item name="android:textColorPrimary">@color/green_400</item>
        <item name="android:textSize">42sp</item>
    </style>

</resources>