<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>



    <style name="MyTextAppearanceMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/white_background</item>
        <item name="trackTint">@color/orange_300</item>
    </style>

    <!--todo o custom seekbar já está a ser feito noutro sítio, cuidado com isto para n estar a refazer-->
    <style name="SeekBarStyle">
        <item name="colorControlNormal">@color/orange_100</item>
        <item name="colorControlActivated">@color/orange_300</item>
        <item name="colorControlHighlight">@color/orange_100</item>
    </style>

</resources>