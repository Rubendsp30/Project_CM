<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_meal_item"
    android:layout_marginBottom="10dp"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homeMealScheduleHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hour"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_24"/>

        <TextView
            android:id="@+id/homeMealScheduleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/repeat_days"
            android:textColor="@color/white"
            android:textSize="@dimen/xsmall_10"/>


    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/scheduleActiveSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomSwitch"
        android:background="@drawable/vaccine_rounded_corner"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


</LinearLayout>