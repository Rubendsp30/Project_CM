<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_meal"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
    </androidx.appcompat.widget.Toolbar>
    <NumberPicker
        android:id="@+id/numberPickerHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toStartOf="@+id/numberPickerMinute"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- NumberPicker for Minutes -->
    <NumberPicker
        android:id="@+id/numberPickerMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/numberPickerHour"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/numberPickerMinute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <!-- Repeat Section -->
        <TextView
            android:id="@+id/repeatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repeat"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <!-- Day of the Week Buttons -->
        <LinearLayout
            android:id="@+id/dayOfWeekButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Example for Monday button -->
            <Button
                android:id="@+id/buttonMonday"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange_300"
                android:padding="0dp"
                android:text="@string/mon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/buttonTuesday"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange_300"
                android:padding="0dp"
                android:text="@string/tue"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/buttonWednesday"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange_300"
                android:padding="0dp"
                android:text="@string/wed"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/buttonThursday"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange_300"
                android:padding="0dp"
                android:text="@string/thu"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/buttonFriday"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange_300"
                android:padding="0dp"
                android:text="@string/fri"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/buttonSaturday"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange_300"
                android:padding="0dp"
                android:text="@string/sat"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/buttonSunday"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange_300"
                android:padding="0dp"
                android:text="@string/sun"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Portion Section -->
        <TextView
            android:id="@+id/portionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portion"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="16dp"/>

        <SeekBar
            android:id="@+id/portionSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:min="10"
            android:progress="85"
            android:progressDrawable="@drawable/custom_seekbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/portionTreatText" />


        <!-- Notification Section -->
        <TextView
            android:id="@+id/notificationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="16dp"/>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            />
    </LinearLayout>

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:backgroundTint="@color/green_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/saveButton"
        app:layout_constraintWidth_percent="0.5" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:backgroundTint="@color/orange_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>