<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:gravity="center"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/petAvatar"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/setup_final_icon" />

    <TextView
        android:id="@+id/petNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/pet_name"
        android:textColor="@color/green_400"
        android:textSize="@dimen/xsmall_10" />

    <TextView
        android:id="@+id/nextMealText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/next_meal_at"
        android:textColor="@color/green_400"
        android:textSize="@dimen/small_16" />

    <TextView
        android:id="@+id/nextMealHourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/_10_30"
        android:textColor="@color/green_400"
        android:textSize="@dimen/medium_24" />

    <LinearLayout
        android:id="@+id/schedulesBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@drawable/custom_username_edit_text"
        android:orientation="vertical"
        android:padding="12dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/schedulesRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/addScheduleButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/addScheduleButton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white_background"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/add" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/supplyProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:progress="25"
        android:progressDrawable="@drawable/custom_progress_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/supplyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/supplyInfoButton"
            android:text="@string/_90_food_suply"
            android:textAlignment="center"
            android:textColor="@color/green_400"
            android:textSize="@dimen/small_16" />

        <ImageButton
            android:id="@+id/supplyInfoButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/white_background"
            app:srcCompat="@drawable/baseline_info_24" />

    </RelativeLayout>


    <ImageButton
        android:id="@+id/treatButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white_background"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/treat_button" />

</LinearLayout>