<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrowleft2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/settings"
            android:textSize="@dimen/medium_24"
            android:textColor="@color/green_400"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchNotifications"
        style="@style/CustomSwitch"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:text="@string/notifications"
        android:textColor="@color/white"
        android:background="@drawable/vaccine_rounded_corner"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="@dimen/small_16"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchAnimatedNotifications"
        style="@style/CustomSwitch"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:text="@string/animated_notifications"
        android:textSize="@dimen/small_16"
        android:textColor="@color/white"
        android:background="@drawable/vaccine_rounded_corner"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switchNotifications"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <FrameLayout
        android:id="@+id/containerVolume"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:background="@drawable/vaccine_rounded_corner"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switchAnimatedNotifications"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/tvVolumeLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/volume"
            android:gravity="center"
            android:textSize="@dimen/small_16"
            android:textColor="@color/white"
             />

        <SeekBar
            android:id="@+id/seekBarVolume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="50"
            android:splitTrack="false"
            android:progressDrawable="@drawable/custom_seekbar"
            android:thumb="@drawable/custom_seekbar_thumb"
            android:layout_marginStart="100dp"
            android:layout_gravity="center_vertical" />
    </FrameLayout>

    <Button
        android:id="@+id/buttonDateAndTime"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:text="@string/date_and_time"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="@dimen/small_16"
        app:cornerRadius="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerVolume"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonLanguage"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:text="@string/language"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="@dimen/small_16"
        app:cornerRadius="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonDateAndTime"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
