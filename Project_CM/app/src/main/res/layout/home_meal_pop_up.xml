<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/deleteMealConfirmationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Are you sure you want to delete this meal?"
        android:textColor="@color/green_400"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mealNolButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No"
        android:backgroundTint="@color/green_200"
        app:layout_constraintTop_toBottomOf="@+id/deleteMealConfirmationText"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mealYesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:backgroundTint="@color/orange_300"
        app:layout_constraintTop_toBottomOf="@+id/deleteMealConfirmationText"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>